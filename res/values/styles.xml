<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
       <item name="android:windowNoTitle">true</item>
       <item name="android:background">#CD5555</item>               <!-- #8B0000 -->
    </style>
    <style name="HOLO" parent="@android:style/Theme.Holo.Light" >
        <item name="android:actionBarStyle">@style/bardegistir</item>
        <item name="android:actionBarSplitStyle">@style/uka</item>
    </style>
    <style name="bardegistir" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" >
        <item name="android:background" >#E5E4E2</item>
    </style>
    <style name="uka">
        <item name="android:background">#EE82EE</item>
    </style>
</resources>
